set default=0
set timeout=1

menuentry 'Install' {
{% if distro.startswith('leap15.3') %}
  linux linux ro autoyast=http://10.241.58.130/{{ distro }}-autoyast install=http://10.241.58.130/openSUSE-Leap-15.3-DVD-x86_64-Current ifcfg=ens2f0=dhcp textmode=1 display=1 proxy=10.241.58.130:3128 vnc=1 VNCPassword=12345678
  initrd initrd
{% endif %}
{% if distro.startswith('leap15.5') %}
  linux linux ro autoyast=http://192.168.1.223/{{ distro }}-autoyast install=http://10.241.58.130/openSUSE-Leap-15.5-DVD-x86_64-Current ifcfg=ens2f0=dhcp textmode=1 display=1 proxy=10.241.58.130:3128 vnc=1 VNCPassword=12345678
  initrd initrd
{% else %}
{% if distro.startswith('openEuler') %}
  linux vmlinuz ro ip=ens2f0:dhcp inst.ks=http://10.241.58.130/{{ distro }}-kickstart net.ifnames=0
{% else %}
  linux vmlinuz ro ip=ens2f0:dhcp inst.ks=http://10.241.58.130/{{ distro }}-kickstart
{% endif %}
  initrd initrd.img
{% endif %}
}
